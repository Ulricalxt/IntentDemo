<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/userText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/test1"
        android:text="账户"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/pwdText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pwdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/test1"
        android:text="密码"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/isAdminText"
        app:layout_constraintEnd_toEndOf="@+id/userText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/userText"
        app:layout_constraintTop_toBottomOf="@+id/userText" />

    <TextView
        android:id="@+id/isAdminText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/test1"
        android:text="是否管理员"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/pwdText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/pwdText"
        app:layout_constraintTop_toBottomOf="@+id/pwdText" />
</androidx.constraintlayout.widget.ConstraintLayout>